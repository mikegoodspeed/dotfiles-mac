# bat as a cat replacement
alias cat="bat -p"

# use bat to colorize manpages
export MANPAGER="sh -c 'col -bx | bat -l man -p'"
 
# lsd as a ls replacement
alias ls="lsd"
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias lt="ls --tree"

# pyenv
export PATH="$HOME/.pyenv/shims:$PATH"
eval "$(pyenv init -)"

