# https://github.com/zplug/zplug

# init
export ZPLUG_HOME="$HOMEBREW_PREFIX/opt/zplug"
source "$ZPLUG_HOME/init.zsh"

# completions
zstyle ':completion:*' matcher-list 'm:{[:lower:][:upper:]}={[:upper:][:lower:]}'

# load
if ! zplug check --verbose; then
	zplug install
	zplug load --verbose
fi
zplug load
